  {% capture asset_map_name %}{{
    include.map
      | default: page.asset_map.name
      | default: site.asset_map.name
      | default: "manifest"
  }}{% endcapture %}
  {% assign asset_map = site.data[asset_map_name] %}
  {% assign asset = asset_map[include.name] %}
  {% if asset %}
    {{ asset.path
      | default: asset.src
      | default: asset.href
      | default: asset.asset
      | default: asset
    }}
  {% endif %}
{% endcapture %}{{ result | strip }}